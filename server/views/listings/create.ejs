<% layout("layouts/boilerplate") %> 
<link rel="stylesheet" href="/css/form.css">
  <div class="form-container">

    <form action="/create" method="POST" class="needs-validation" novalidate>
      
      <label for="title">Title</label>
      <input type="text" id="title" name="listing[title]" placeholder="Enter listing title" required>
      
    <div class="invalid-feedback">
      Invalid Input
    </div>
      
      <label for="description">Description</label>
      <textarea id="description" name="listing[description]" placeholder="Describe your listing" required></textarea>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <label for="image">Image URL</label>
      <input type="text" id="image" name="listing[image][url]" placeholder="https://example.com/image.jpg" >
       <div class="invalid-feedback">
      Enter Valid Url
    </div>
      <label for="price">Price (â‚¹)</label>
      <input type="number" id="price" name="listing[price]" placeholder="Enter price in INR" required>
       <div class="invalid-feedback">
      Enter Valid Price
    </div>
      <label for="location">Location</label>
      <input type="text" id="location" name="listing[location]" placeholder="City, State" required>
       <div class="invalid-feedback">
      Enter Valid Location
    </div>
      <label for="country">Country</label>
      <input type="text" id="country" name="listing[country]" placeholder="Enter country" required>
       <div class="invalid-feedback">
      Enter Valid Country
    </div>
      <button type="submit">ADD +</button>
    </form>
  </div>
  <script src="/js/script.js"></script>
