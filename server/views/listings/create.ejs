<% layout("layouts/boilerplate") %> 
<link rel="stylesheet" href="/css/form.css">
  <div class="form-container">

    <form action="/" method="POST" class="needs-validation" novalidate>
      
      <label for="title">Title</label>
      <input type="text" id="title" name="title" placeholder="Enter listing title" required>
      
    <div class="invalid-feedback">
      Invalid Input
    </div>
      
      <label for="description">Description</label>
      <textarea id="description" name="description" placeholder="Describe your listing" required></textarea>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <label for="image">Image URL</label>
      <input type="text" id="image" name="image" placeholder="https://example.com/image.jpg" required>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <label for="price">Price (â‚¹)</label>
      <input type="number" id="price" name="price" placeholder="Enter price in INR" required>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <label for="location">Location</label>
      <input type="text" id="location" name="location" placeholder="City, State" required>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <label for="country">Country</label>
      <input type="text" id="country" name="country" placeholder="Enter country" required>
       <div class="invalid-feedback">
      Invalid Input
    </div>
      <button type="submit">ADD +</button>
    </form>
  </div>
  <script src="/js/script.js"></script>
